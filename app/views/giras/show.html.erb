<div class="container">
  <div class="row justify-content-center p-5">
    <%= render @gira %>
  </div>

    <div class="row justify-content-center">
      <div class="col-4 justify-content-center text-center pt-3">  <!-- Adicionado text-center -->
        <a href="#" class="btn btn-primary">Marcar Presen√ßa</a>
      </div>
      <% if user_signed_in? and current_user.name == "admin" %>
        <div class="col-4 justify-content-center text-center p-3">  <!-- Adicionado text-center -->
          <%= link_to "Editar essa Gira", edit_gira_path(@gira), class: "btn btn-warning", type: "button" %>
        </div>
        <div class="col-4 justify-content-center text-center"> <!-- Adicionado text-center -->
